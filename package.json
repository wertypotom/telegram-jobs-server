{
  "name": "telegram-job-scraper",
  "version": "1.0.0",
  "description": "Backend service for scraping Telegram job channels and generating tailored resumes with AI",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "migrate": "ts-node -r dotenv/config -r tsconfig-paths/register src/migrations/index.ts",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:status": "npm run migrate status",
    "channels:seed": "ts-node -r tsconfig-paths/register src/scripts/seed-channels.ts",
    "channels:extract": "ts-node -r tsconfig-paths/register src/scripts/extract-channel-info.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "telegram",
    "job-scraper",
    "ai",
    "resume",
    "nodejs"
  ],
  "author": "werty.potom",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.31.0",
    "@lemonsqueezy/lemonsqueezy.js": "^4.0.0",
    "@sentry/node": "^10.32.1",
    "@sentry/profiling-node": "^10.32.1",
    "@types/node-telegram-bot-api": "^0.64.13",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "docx": "^8.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "input": "^1.0.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.6.0",
    "mongoose": "^8.0.3",
    "multer": "^2.0.2",
    "next-auth": "^4.24.13",
    "node-telegram-bot-api": "^0.66.0",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.14.0",
    "telegram": "^2.26.22"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/pdf-parse": "^1.1.4",
    "@types/pdfkit": "^0.13.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.51.0"
  }
}

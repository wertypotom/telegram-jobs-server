{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@config/*": [
        "shared/config/*"
      ],
      "@middlewares/*": [
        "shared/middlewares/*"
      ],
      "@utils/*": [
        "shared/utils/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@modules/*": [
        "modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}